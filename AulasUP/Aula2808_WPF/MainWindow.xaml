<Window x:Class="Aula2808_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula2808_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <!--<Button x:Name="btnVoltar" Grid.Column="1" Grid.Row="1"/>-->

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Row="1" Grid.Column="1" Width="600px" Height="250px" >
            <Button Content="Não aperte" Margin="50,10,50,10"/>
            <CheckBox Content=""/>
            <ComboBox Width="120">
                <Button/>
                <Button Background="{x:Null}" Content="Aperte Aqui"/>
                <CheckBox/>
            </ComboBox>

        </StackPanel>

    </Grid>
</Window>
